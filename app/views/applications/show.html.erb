<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-8">
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="pills-overview-tab" data-toggle="pill" href="#pills-overview" role="tab" aria-controls="pills-overview" aria-selected="true">Overview</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pills-notes-tab" data-toggle="pill" href="#pills-notes" role="tab" aria-controls="pills-notes" aria-selected="false">Notes</a>
        </li>
      </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-overview" role="tabpanel" aria-labelledby="pills-overview-tab">
          <div>
            <h1><%= @application.company_name %></h1>
            <p><%= @application.company_link %></p>
            <p><%= @application.job_title %></p>
            <p><em><%= @application.location %></em></p>
            <p><%= @application.application_status %></p>
            <p><%= @application.job_description %></p>
          </div>

  <div class="timeline">
    <% @application.reminders.order(scheduled_date: :desc).each do |reminder| %>
      <div class= "timeline-note" type="button" data-toggle="modal" data-target="#edit_<%= dom_id(reminder) %>" data-tippy="<%= reminder.title %> <%= reminder.scheduled_date %>" data-placement="right"></div>
      <div class="modal fade bd-example-modal-lg" id="edit_<%= dom_id(reminder) %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <%= simple_form_for reminder do |f| %>
              <%= f.input :title %>
              <%= f.input :scheduled_date %>
              <%= f.submit class: 'btn btn-primary' %>
          <div class="modal fade bd-example-modal-lg create-reminder-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <div class=" container notes-form">
                  <%= simple_form_for [@application, @reminder] do |f| %>
                  <%= f.input :title %>
                  <p><%= f.input :scheduled_date %></p>
                  <%= f.button :submit, class:"btn btn-primary"%>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="pills-notes" role="tabpanel" aria-labelledby="pills-notes-tab">
          <div>
            <% @application.notes.each do |note| %>
              <h5><strong><%= note.title %></strong> at: <%= note.date %></h5>
              <p>Content: <%= note.content %></p>
            <% end %>
          </div>
          <button type="button" class="text-underline notes-button" data-toggle="modal" data-target=".create-note-modal">+ Add New Note</button>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="timeline">
        <button type="button" class="text-underline reminder-button" data-toggle="modal" data-target=".create-reminder-modal">+ Add Reminder</button>
        <% @application.reminders.order(scheduled_date: :desc).each do |reminder| %>
          <div class= "timeline-note" type="button" data-toggle="modal" data-target="#edit_<%= dom_id(reminder) %>" data-tippy="<%= reminder.title %> <%= reminder.scheduled_date %>" data-placement="right"></div>
          <div class="modal fade bd-example-modal-lg" id="edit_<%= dom_id(reminder) %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <%= simple_form_for reminder do |f| %>
                  <%= f.input :title %>
                  <%= f.input :description %>
                  <%= f.input :scheduled_date %>
                  <%= f.submit class: 'btn btn-primary' %>
                <% end %>
                <%= reminder.scheduled_date %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= link_to "Edit Application", edit_application_path(@application)  %>
  <%= link_to "Delete Application", application_path(@application), method: :delete, data: { confirm: "Are you sure you want to delete this application?" }%>

  <div class="modal fade bd-example-modal-lg create-note-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class=" container notes-form">
          <%= simple_form_for [@application, @note] do |f| %>
          <%= f.input :title %>
          <p><%= f.input :content %></p>
          <%= f.button :submit, class:"btn btn-primary"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
