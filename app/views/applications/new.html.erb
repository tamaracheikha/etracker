<div class="new-form-container d-flex justify-content-around">
  <div class="add-job">
     <div class="d-flex justify-content-around">
       <h2>Add a Job</h2>
     </div>
  <div class = "new-job-form">
    <%= simple_form_for(@application) do |f| %>
      <%#= f.input :company_name, class: "form-control" %>
      <%= f.association :company, class: "form-control" %>
      <%= f.input :company_link, class: "form-control" %>
      <%= f.input :location, class: "form-control" %>
      <%= f.input :job_title, class: "form-control" %>
      <%= f.input :job_description, class: "form-control" %>
      <%= f.input :cv, as: :file %>
      <%= f.input :cover_letter, as: :file %>
      <%= f.input :application_status, :collection => ['Saved','Applied','Interviewing','Offer'], selected: params[:status] %>
      <div>
        <%= f.button :submit, class:"submit-button" %>
      </div>
    <% end %>
  </div>
  </div>
</div>
