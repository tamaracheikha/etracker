{
  "name": "eTRACKER chrome-extension",
  "version": "0.1",
  "manifest_version": 2,

  "background": {
    "scripts": ["background.js"],
    "persistance": false
  },

  "permissions": ["tabs", "cookies", "<all_urls>", "storage"],
  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]

}
